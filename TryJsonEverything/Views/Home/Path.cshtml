@model LibraryVersionModel

@{
	ViewData["Title"] = "JSON Path";
}

<div class="text-center">
	<h1 class="display-4">JSON Path</h1>
	<p>
		Query JSON data - "XPath for JSON"
		<br />
		Learn more about
		<a href="https://github.com/ietf-wg-jsonpath/draft-ietf-jsonpath-base" target="_blank">JSON Path <partial name="_ExternalLink" /></a>
	</p>
	<p class="btn version-callout">
		<code>@Model.Name</code> @@ v@(Model.Version)
	</p>
	<h4 class="text-left">Path:</h4>
	<input id="editor-path" type="text" class="col-12 form-control text-monospace" />
	<h4 class="text-left">Data:</h4>
	<div class="col-12">
		<div id="editor-data" class="height-500"></div>
	</div>
	<div>
		<button type="submit" onclick="query()" class="btn btn-primary m-4">Query</button>
	</div>
	<div id="output">

	</div>
</div>

@section Scripts{
	<script src="~/lib/ace/ace.js" type="text/javascript" charset="utf-8"></script>
	<script src="~/js/path.js" type="text/javascript" charset="utf-8"></script>
}

@section OptionsBar
{
	<div class="card">
		<button class="card-header btn btn-primary options-btn" type="button" data-toggle="collapse" data-target="#options-content" aria-expanded="false" aria-controls="options-content">
			Options
		</button>
		<div id="options-content" class="collapse card-body">
			<div class="form-group">
				<div class="form-check">
					<input class="form-check-input" type="checkbox" value="" id="resolve-references">
					<label class="form-check-label" for="resolve-references">Data Reference Resolution<br/><em>(Experimental)</em></label>
				</div>
			</div>
		</div>
	</div>
}
